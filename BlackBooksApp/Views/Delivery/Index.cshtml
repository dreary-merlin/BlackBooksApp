@model IEnumerable<BlackBooksApp.Models.Delivery>

@{
    ViewBag.Title = "Index";
}

<h2>Службы доставки</h2>

<p style="float:left;">
    @Html.ActionLink("Новая служба доставки", "Create")
</p>

@using (Html.BeginForm())
{
    <p style="float:right;">
        Найти по наименованию: @Html.TextBox("SearchString")
        <input type="submit" value="Поиск" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.ActionLink("Стоимость доставки", "Index", new { sortOrder = ViewBag.CostSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
